<% if !@my_friends.empty? %>
  <div class='row'>
    <div class='col-9'>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Full Name</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @my_friends.each do |friend| %>
            <tr>
              <td><%= friend.full_name %></td>
              <td>
                <%= link_to 'View Profile', user_path(friend), class: 'btn btn-xs btn-success' %>
                <%= link_to 'Stop following', friendship_path(friend), method: :delete, data: {confirm: 'Are you sure'}, class: 'btn btn-xs btn-warning' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
